<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Luas Persegi Panjang"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_panjang"
            android:hint="Masukkan Panjang"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_lebar"
            android:hint="Masukkan Lebar"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_hitung"
            android:text="Hitung Luas Persegi Panjang"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hasil_luas_persegi_panjang"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:text="Hasil Luas"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hasil_Keliling_persegi_panjang"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:text="Hasil Keliling"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


    </LinearLayout>





</LinearLayout>